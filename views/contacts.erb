    <div class = "contactnumber centered">
      <p>There are <span class="underlined"><%= @num_contacts %></span> contacts</p>
    </div>

    <div class="centered">
      <% @contacts.each {|contact| -%>
        <div class="contact">
        <p><a href="<%= "/contacts/#{contact.id}" %>"><%= "#{contact.full_name.split.map(&:capitalize).join(' ')} (#{contact.email})" %></a></p>
        <p><a href="/contacts/<%= contact.id %>/edit">Edit</a> | <a href="#">Delete</a></p>
        </div>
        <% } %>
    </div>
